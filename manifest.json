{
    "name": "Whatsapp TLDR Bot",
    "version": "1.0",
    "description": "Base Level Extension",
    "manifest_version": 3,
    "action": {
      "default_popup": "public/tldr-bot.html",
      "default_icon": "icons/tldr-bot-icon.png"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["src/content.js"]
        }
      ],
    "options_page": "public/options.html",
    "permissions": [
      "storage",
      "https://api.openai.com/",
      "clipboardWrite"
    ],
    "host_permissions": [
      "https://*.whatsapp.com/*"
    ]
}
